@model IEnumerable<TeamMember>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Team Member table</h6>
                        <a class="btn btn-primary" style="color:white" asp-area="Admin" asp-controller="TeamMember" asp-action="Create" >Create</a>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Crud Operations</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div>
                                                <div>
                                                    <img width="150px" src="~/assets/img/team/@item.Image" class="avatar avatar-sm me-3 border-radius-lg" alt="user1">
                                                </div>

                                            </div>
                                        </td>
                                        <td>
                                            <div>
                                                <h6 class="mb-0 text-sm">@item.Name</h6>
                                            </div>
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" asp-area="Admin" asp-controller="TeamMember" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                            <a class="btn btn-primary" asp-area="Admin" asp-controller="TeamMember" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                            <a class="btn btn-primary" asp-area="Admin" asp-controller="TeamMember" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        </td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

